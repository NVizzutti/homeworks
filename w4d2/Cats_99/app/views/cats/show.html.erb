<table>
  <tr>
    <th>Attribute Name</th>
    <th>Value</th>
  </tr>
  <tr>
    <td>Name:</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Birthday:</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<table>
  <tr>
    <th>Rental Requests</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>

  <% @cat.cat_rental_requests.each do |rental| %>
    <tr>
      <td align="CENTER"><%= rental.id %></td>
      <td><%= rental.start_date %></td>
      <td><%= rental.end_date %></td>
      <td><%= rental.status %></td>
      <td><%= button_to 'Approve Request', approve_cat_rental_request_url(rental), disabled: !rental.pending? %></td>
      <td><%= button_to 'Deny Request', deny_cat_rental_request_url(rental), disabled: !rental.pending? %></td>
    </tr>
  <% end %>
</table>
